<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="TECSAT-DB">
    <jta-data-source>java:/tecsatDB</jta-data-source>
    <class>ar.com.tecsat.modelo.Cliente</class>
    <class>ar.com.tecsat.modelo.Dispositivo</class>
    <class>ar.com.tecsat.modelo.Evento</class>
    <class>ar.com.tecsat.modelo.EventoPK</class>
    <class>ar.com.tecsat.modelo.Operador</class>
    <class>ar.com.tecsat.modelo.Transporte</class>
        <properties>
            <property name="showSql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
        </properties>
    </persistence-unit>
</persistence>